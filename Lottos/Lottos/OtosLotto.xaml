        <Button x:Name="btnMentes" Content="Mentés" HorizontalAlignment="Left" Margin="542,302,0,0" VerticalAlignment="Top" Width="187" Height="51" Background="#FF3EB224" Foreground="White" FontSize="22" FontWeight="Bold"/>

